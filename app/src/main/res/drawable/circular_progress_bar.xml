<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270" android:toDegrees="270" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="ring" android:innerRadiusRatio="2.36" android:thicknessRatio="19.5">
                <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="0" android:type="sweep" android:centerColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <rotate android:fromDegrees="270" android:toDegrees="270" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="ring" android:innerRadiusRatio="2.36" android:thicknessRatio="19.5">
                <gradient android:startColor="@color/downBtnprgclr" android:endColor="@color/downBtnprgclr" android:angle="0" android:type="sweep" android:centerColor="@color/downBtnprgclr"/>
            </shape>
        </rotate>
    </item>
</layer-list>
