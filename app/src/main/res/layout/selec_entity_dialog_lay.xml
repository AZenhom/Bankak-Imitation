<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:orientation="vertical" android:background="@null" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/dialogTitlelay" android:background="@drawable/dialog_headerbg_shape" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/edi_title_dialog" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2" android:minHeight="150dp" android:layout_below="@+id/dialogTitlelay">
        <RelativeLayout android:gravity="center" android:id="@+id/sudan_lay" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="20dp" android:layout_weight="1">
            <TextView android:textSize="18dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/text" android:layout_width="60dp" android:layout_height="30dp" android:layout_marginRight="10dp" android:text="Sudan" android:layout_below="@+id/image"/>
            <ImageView android:id="@+id/image" android:layout_width="60dp" android:layout_height="35dp" android:src="@drawable/sudan_flag" android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:id="@+id/uae_lay" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="20dp" android:layout_weight="1">
            <TextView android:textSize="18dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/text1" android:layout_width="60dp" android:layout_height="30dp" android:layout_marginRight="10dp" android:text="UAE" android:layout_below="@+id/image1"/>
            <ImageView android:id="@+id/image1" android:layout_width="60dp" android:layout_height="35dp" android:src="@drawable/uae_flag" android:scaleType="fitXY"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
