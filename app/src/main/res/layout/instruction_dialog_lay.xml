<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@null" android:paddingTop="50dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/trcTitlelay" android:background="@drawable/dialog_headerbg_shape" android:layout_width="match_parent" android:layout_height="40dp">
