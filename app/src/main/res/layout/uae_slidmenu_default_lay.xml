<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/profileBox" android:background="@drawable/slideavatabg" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/avatar" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="10dp" android:src="@drawable/defaultcuavatar" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_toRightOf="@+id/avatar" android:layout_alignParentTop="true" android:layout_centerVertical="true">
            <TextView android:textSize="15sp" android:textColor="@color/white" android:id="@+id/cName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Customer Name"/>
            <TextView android:textSize="13sp" android:textColor="@color/white" android:id="@+id/loggedTitle" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/clastLgTitle"/>
            <LinearLayout android:orientation="horizontal" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="13sp" android:textColor="@color/white" android:id="@+id/lastLogin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/clastLg"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="start" android:background="@drawable/bg" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent">
        <ListView android:id="@+id/mDrawerList" android:background="@null" android:paddingBottom="5dp" android:focusable="true" android:focusableInTouchMode="true" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null"/>
    </RelativeLayout>
</LinearLayout>
