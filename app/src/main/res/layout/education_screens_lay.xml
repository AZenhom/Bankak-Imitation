<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/mainEduLay" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager android:id="@+id/viewPager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:layout_alignParentBottom="true">
        <View android:id="@+id/line" android:background="@color/edu_screen_arrow" android:layout_width="match_parent" android:layout_height="1.3dp" android:layout_marginBottom="?attr/actionBarSize" android:alpha="0"/>
        <TextView android:textSize="16sp" android:textColor="@color/edu_screen_arrow" android:gravity="center" android:layout_gravity="start|center_vertical" android:id="@+id/skipBtn" android:background="@null" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/skip"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/viewPagerCountDots" android:layout_width="wrap_content" android:layout_height="16dp"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/nextBtnLay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp">
            <TextView android:textSize="16sp" android:textColor="@color/edu_screen_arrow" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/nextBtn" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/login" android:layout_alignParentRight="true"/>
            <ImageView android:layout_gravity="center_vertical" android:background="@drawable/ic_arrow_edu" android:visibility="visible" android:clickable="true" android:layout_width="15dp" android:layout_height="20dp" android:layout_marginLeft="0dp"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
