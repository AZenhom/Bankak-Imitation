                <ImageView android:id="@+id/currIcon" android:layout_width="22dp" android:layout_height="22dp" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
