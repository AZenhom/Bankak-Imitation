<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/othFtConfiTablay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders"
        android:padding="20dp"
        android:shrinkColumns="*" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/borders"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/edtBenIdenF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:drawableRight="@drawable/dropdownarr"
                android:drawablePadding="10dp"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/purpose_of_payment"
                android:textColor="@color/fieldsTxtClr"
                android:textColorHint="@color/hintClr" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/edtAccSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:drawableRight="@drawable/dropdownarr"
                android:drawablePadding="10dp"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/accSelHint"
                android:textColor="@color/fieldsTxtClr"
                android:textColorHint="@color/hintClr" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/llytftdirectMobile"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputMObile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/edtOthftMbno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@null"
                    android:hint="@string/uaembnoHint"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="number"
                    android:maxLength="@integer/uaembnoMaxLen"
                    android:singleLine="true"
                    android:textColor="@color/fieldsTxtClr"
                    android:textColorHint="@color/hintClr" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/imagvewftdirectMobile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:src="@drawable/newmobile" />
        </LinearLayout>

        <View
            android:id="@+id/viewmbl"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputBeneficary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/edtothrftbenf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:drawableRight="@drawable/manicon"
                android:drawablePadding="10dp"
                android:hint="@string/benfName"
                android:inputType="text"
                android:maxLength="@integer/nameMaxLen"
                android:singleLine="true"
                android:textColor="@color/fieldsTxtClr"
                android:textColorHint="@color/hintClr" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/viewbenf"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/edtOthftAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:hint="@string/amtHint"
                    android:inputType="number"
                    android:maxLength="@integer/amtMaxLen"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/fieldsTxtClr"
                    android:textColorHint="@color/hintClr" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_curr"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15sp"
                android:background="@drawable/curr_circle"
                android:gravity="center"
                android:padding="2dp"
                android:text="AED"
                android:textColor="@color/hintClr"
                android:textSize="8dp"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addrsTxtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:drawableRight="@drawable/address"
                android:drawablePadding="10dp"
                android:hint="Enter Address"
                android:inputType="text"
                android:maxLength="@integer/commentMaxLen"
                android:singleLine="true"
                android:textColor="@color/fieldsTxtClr"
                android:textColorHint="@color/hintClr" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/remarkTextInpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/edtRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:drawableRight="@drawable/comment"
                android:drawablePadding="10dp"
                android:hint="@string/remarksHint"
                android:inputType="text"
                android:maxLength="@integer/commentMaxLen"
                android:singleLine="true"
                android:textColor="@color/fieldsTxtClr"
                android:textColorHint="@color/hintClr" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <include layout="@layout/uae_buttons_lay" />
</LinearLayout>
