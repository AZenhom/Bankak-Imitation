<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <include android:id="@+id/toolbar" layout="@layout/toolbarlayout" />

    <RelativeLayout
        android:id="@+id/homeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_hdr_bg"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeCuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="asdasdas"
                android:textColor="@color/titleClr"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_titleLay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/sub_hdr_bg"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/backmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/scanPayheader"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/scanpayheader"
            android:visibility="gone" />

        <TextView
            android:id="@+id/servTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/backmen"
            android:background="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@color/titleClr"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>
