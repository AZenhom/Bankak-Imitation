<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mbLoginFromlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/loginmanicon" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:paddingTop="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtmbCif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/mbcifHint"
                    android:inputType="number"
                    android:maxLength="@integer/cifMaxLen"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/fieldsTxtClr"
                    android:textColorHint="@color/hintClr" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/vewMBLoginCIF"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mbPwdIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/loginpinicon" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:paddingTop="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edmbPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/mbpwdHint"
                    android:inputType="textPassword"
                    android:maxLength="@integer/pinpwdMaxLen"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/fieldsTxtClr"
                    android:textColorHint="@color/hintClr" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/vewMBLoginPwd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mmLoginFromlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/newmobile" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:paddingTop="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtmmmbno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/mbnoHint"
                    android:inputType="number"
                    android:maxLength="@integer/mbnoMaxLen"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="@string/mbnoPrefx"
                    android:textColor="@color/fieldsTxtClr"
                    android:textColorHint="@color/hintClr" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/vewMMLoginMobile"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mmPwdIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/loginpinicon" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:paddingTop="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edmmPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/mmpwdHint"
                    android:inputType="numberPassword"
                    android:maxLength="@integer/pinpwdMaxLen"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/fieldsTxtClr"
                    android:textColorHint="@color/hintClr" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/vewMMLoginPwd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/appforrmpadding_val"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/appforrmpadding_val"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:scaleType="fitCenter"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/newReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="@string/newReg"
                android:textColor="@color/lgnewReSwipclr"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/cantSignin"
                android:textColor="@color/frgPwdClr"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lgWithFingpriLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/appforrmpadding_val"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/appforrmpadding_val"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fgprImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/loginregfringicon" />

            <TextView
                android:id="@+id/lgWithFingpriTxt"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fgprImage"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text="@string/lngwithFingPrnt"
                android:textColor="@color/lgnewReSwipclr"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lgregfingbg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lgWithFrgLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/loginregfringicon" />

                <TextView
                    android:id="@+id/lgFrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="@string/lngwithFrgPrnt"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:layout_weight="0.1"
                android:background="@drawable/loginfingview" />

            <LinearLayout
                android:id="@+id/regWithFrgLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/loginregfringicon" />

                <TextView
                    android:id="@+id/regFrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="@string/regFrintPrt"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/switRecLay"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@null"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/slidscanandpay" />

            <TextView
                android:id="@+id/switRec"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/switRec"
                android:textColor="@color/lgnewReSwipclr"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
